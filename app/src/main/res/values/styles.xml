<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#404040</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#404040</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#404040</item>
        <item name="android:background">#FF4081</item>
        <item name="android:dropDownSelector">#FF4081</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F0f0f0</item>
        <item name="android:dropDownSelector">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="spinner_myownstyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#000</item>
        <item name="android:colorBackground">#000</item>
        <item name="android:listSelector">#000</item>
        <item name="android:dropDownSelector">#000</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">533dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="items_and_followings_style" parent="Base.Widget.AppCompat.ListView">
        <item name="android:background">@color/white</item>
    </style>

</resources>